@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/demo.css" />
    <link rel="stylesheet" href="~/Content/form-fullcast.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrapmin.css" />
    <title>FullCast</title>
</head>
<body>
    @if (@AzureMovies.Controllers.SearchController.CastCount != 0)
    {
        @RenderPage("~/Views/Header.cshtml")
        <div class="FullCast">
            <div><b>@AzureMovies.Controllers.SearchController.MovieTitle cast:</b><br /></div>
            <br />
            <table class="table table-bordered table-responsive table-hover">
                <tr>
                    <th></th>
                    <th>Name </th>
                    <th>Character Name </th>
                </tr>
                @for (int i = 0; i < @AzureMovies.Controllers.SearchController.CastCount; i++)
                {
                    <tr>
                        <td><img src="@Url.Content("http://image.tmdb.org/t/p/original" + @AzureMovies.Controllers.SearchController.ActorName[i].profile_path)" class="ActorsPhoto" /> </td>
                        <td>@AzureMovies.Controllers.SearchController.ActorName[i].name</td>
                        <td>@AzureMovies.Controllers.SearchController.ActorName[i].character</td>
                    </tr>
                }
            </table>
        </div>
    }
    else if (AzureMovies.Controllers.SearchController.CastCount == 0)
    { <label>Opps! Cast can't be found</label>}
</body>
</html>